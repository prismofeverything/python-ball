import re

def parseConversation(string):
    lines = string.split("\n")
    groups = [line.split() for line in lines]

    return groups

def parseBook(string):
    removeNewlines = re.compile("\r\n")
    mrmrs = re.compile("(Mrs?).")
    normal = mrmrs.sub("(\1)", string)

    straight = removeNewlines.sub(' ', normal)
    lines = straight.split(".")

    return [line.split() for line in lines]
    
